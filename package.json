{
  "name": "Elmctron",
  "version": "0.1.0",
  "author": "Nir Galon <nirgn975@gmail.com> (http://nirgn.com)",
  "summary": "TodoMVC Elm and Electron.",
  "main": "main-electron.js",
  "repository": "https://github.com/nirgn975/Elmctron.git",
  "description": "A todo app.",
  "homepage": "http://yourAppHomePage.com",
  "devDependencies": {
    "concurrently": "^2.2.0",
    "css-loader": "^0.25.0",
    "electron-builder": "^5.22.1",
    "electron-connect": "^0.4.2",
    "electron-prebuilt": "^1.3.1",
    "elm": "^0.17.0",
    "html-webpack-plugin": "^2.22.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "style-loader": "^0.13.1"
  },
  "dependencies": {
    "elm-hot-loader": "^0.3.4",
    "elm-webpack-loader": "^3.0.6",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.1"
  },
  "scripts": {
    "start": "electron .",
    "start-webpack": "webpack-dev-server --hot --inline --port 3000",
    "dev": "concurrently --kill-others \"npm run start-webpack\" \"npm run start\"",
    "pack": "build --dir",
    "dist": "build",
    "build": "webpack"
  },
  "build": {
    "appId": "your.id",
    "app-category-type": "public.app-category.productivity",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "iconUrl": "https://github.com/nirgn975/Elmctron"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  }
}
