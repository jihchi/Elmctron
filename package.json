{
  "name": "Elmctron",
  "version": "0.1.0",
  "author": "Nir Galon <nirgn975@gmail.com> (http://nirgn.com)",
  "summary": "TodoMVC Elm and Electron.",
  "main": "main-electron.js",
  "repository": "https://github.com/nirgn975/Elmctron.git",
  "description": "A todo app.",
  "homepage": "http://yourAppHomePage.com",
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "css-loader": "^0.25.0",
    "electron-builder": "^5.22.1",
    "electron-connect": "^0.4.2",
    "electron-prebuilt": "^1.3.1",
    "elm": "^0.17.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-cssmin": "^0.1.7",
    "gulp-elm": "^0.5.0",
    "gulp-sass": "^2.3.2",
    "html-webpack-plugin": "^2.22.0",
    "style-loader": "^0.13.1"
  },
  "dependencies": {
    "electron-reload": "^1.0.1",
    "elm-hot-loader": "^0.3.4",
    "elm-webpack-loader": "^3.0.6",
    "file-loader": "^0.9.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.1"
  },
  "scripts": {
    "gulp": "gulp",
    "gulp build": "gulp build",
    "pack": "build --dir",
    "dist-mac": "gulp build; build --macos",
    "dist-linux": "gulp build; build --linux",
    "dist-win": "gulp build; build --win",
    "dist": "gulp build; build -mwl",
    "dev": "webpack-dev-server --hot --inline --port 3000",
    "build": "webpack"
  },
  "build": {
    "appId": "your.id",
    "app-category-type": "public.app-category.productivity",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "iconUrl": "https://github.com/nirgn975/Elmctron"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  }
}
